@{
    ViewData["Title"] = "Index38";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section script
    {
    <script>
        $(document).ready(function () {
            $(".TestAjax").click(function () {
                $.ajax({
                    url: 'AjaxTest/Index38',
                    type: 'post',
                    data: { name: 'Majestic', id: '23' }
                })
                    .done(function (i) {
                        $(".result").html(i);
                    })
            });
        });
    </script>
}

<button class="TestAjax">Test Ajax</button>
<div class="result"></div>

<style>
    .result {
        width: 100%;
        height: 600px;
        margin: 30px auto;
        border: solid 1px #555;
    }
</style>

